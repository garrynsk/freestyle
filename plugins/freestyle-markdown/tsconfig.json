{
    "compilerOptions": {
        "module": "UMD",
        "target": "es5",
        "rootDir": ".",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "outDir": "build",
        "declaration": true,
        "declarationDir": "types"
    },
    "include": [
        "./*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}